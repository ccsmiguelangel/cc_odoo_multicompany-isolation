<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- 
            Reglas de aislamiento ESTRICTO multicompañía.
            Aplican a usuarios internos (group_user), públicos (group_public) y portal (group_portal).
            Los administradores tienen acceso completo para gestionar todas las compañías.
            
            IMPORTANTE: NO se permite ver contactos con company_id = False (globales).
        -->
        
        <!-- ==================== DESACTIVAR REGLA ESTÁNDAR DE ODOO ==================== -->
        <!-- La regla estándar permite ver contactos globales, debemos desactivarla -->
        <record id="base.res_partner_rule" model="ir.rule">
            <field name="active" eval="False"/>
        </record>
        
        <!-- ==================== RES.PARTNER RULES (ESTRICTAS) ==================== -->
        <record id="res_partner_isolation_rule" model="ir.rule">
            <field name="name">Partner Multi-Company Isolation (Internal Users)</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
        
        <record id="res_partner_isolation_rule_public" model="ir.rule">
            <field name="name">Partner Multi-Company Isolation (Public Users)</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
        
        <record id="res_partner_isolation_rule_portal" model="ir.rule">
            <field name="name">Partner Multi-Company Isolation (Portal Users)</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

