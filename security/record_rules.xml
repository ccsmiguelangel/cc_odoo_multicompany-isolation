<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- 
            Reglas de aislamiento ESTRICTO multicompañía.
            
            IMPORTANTE: 
            - NO se permite ver contactos con company_id = False (globales).
            - Cada usuario solo ve contactos de su empresa actual.
            - Excepción: usuarios siempre pueden ver su propio partner (necesario para Odoo).
        -->
        
        <!-- ==================== DESACTIVAR REGLAS ESTÁNDAR DE ODOO ==================== -->
        <!-- Desactivar TODAS las reglas de partners de Odoo para evitar conflictos -->
        <record id="base.res_partner_rule" model="ir.rule">
            <field name="active" eval="False"/>
        </record>
        
        <!-- ==================== REGLA GLOBAL (SIN GRUPO) ==================== -->
        <!-- Esta regla aplica a TODOS los usuarios, incluyendo admins -->
        <!-- Permite: contactos de la empresa actual O el propio partner del usuario O partners de compañías sin company_id -->
        <record id="res_partner_company_isolation_global" model="ir.rule">
            <field name="name">Partner Company Isolation (Global - All Users)</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[
                '|', '|',
                ('company_id', 'in', company_ids),
                ('id', '=', user.partner_id.id),
                '&amp;', ('is_company', '=', True), ('company_id', '=', False)
            ]</field>
        </record>
        
        <!-- ==================== RES.PARTNER RULES POR GRUPO ==================== -->
        <!-- Estas reglas se combinan con la global mediante OR (mismo modelo, diferentes grupos) -->
        <record id="res_partner_isolation_rule" model="ir.rule">
            <field name="name">Partner Multi-Company Isolation (Internal Users)</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">[
                '|', '|',
                ('company_id', 'in', company_ids),
                ('id', '=', user.partner_id.id),
                '&amp;', ('is_company', '=', True), ('company_id', '=', False)
            ]</field>
        </record>
        
        <record id="res_partner_isolation_rule_public" model="ir.rule">
            <field name="name">Partner Multi-Company Isolation (Public Users)</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
        
        <record id="res_partner_isolation_rule_portal" model="ir.rule">
            <field name="name">Partner Multi-Company Isolation (Portal Users)</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="domain_force">['|', ('company_id', 'in', company_ids), ('id', 'child_of', user.commercial_partner_id.id)]</field>
        </record>

        <!-- ==================== PRODUCT.TEMPLATE RULES (ESTRICTAS) ==================== -->
        <record id="product_template_isolation_rule" model="ir.rule">
            <field name="name">Product Template Multi-Company Isolation (Internal Users)</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
        
        <record id="product_template_isolation_rule_public" model="ir.rule">
            <field name="name">Product Template Multi-Company Isolation (Public Users)</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
        
        <record id="product_template_isolation_rule_portal" model="ir.rule">
            <field name="name">Product Template Multi-Company Isolation (Portal Users)</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <!-- ==================== PRODUCT.PRODUCT RULES (ESTRICTAS) ==================== -->
        <record id="product_product_isolation_rule" model="ir.rule">
            <field name="name">Product Multi-Company Isolation (Internal Users)</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
        
        <record id="product_product_isolation_rule_public" model="ir.rule">
            <field name="name">Product Multi-Company Isolation (Public Users)</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
        
        <record id="product_product_isolation_rule_portal" model="ir.rule">
            <field name="name">Product Multi-Company Isolation (Portal Users)</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <!-- ==================== PRODUCT.PUBLIC.CATEGORY RULES ==================== -->
        <!-- 
            NOTA: Las categorías públicas son para navegación en el eCommerce.
            - Usuarios internos: ven categorías de sus empresas (para gestión en backend)
            - Usuarios públicos/portal: ven categorías del website actual (para navegación)
            
            Los productos ya están aislados por empresa, así que es seguro mostrar
            categorías - solo verán productos de la empresa del website.
        -->
        <record id="product_public_category_isolation_rule" model="ir.rule">
            <field name="name">Public Category Multi-Company Isolation (Internal Users)</field>
            <field name="model_id" ref="website_sale.model_product_public_category"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
        
        <record id="product_public_category_isolation_rule_public" model="ir.rule">
            <field name="name">Public Category Multi-Company Isolation (Public Users)</field>
            <field name="model_id" ref="website_sale.model_product_public_category"/>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <record id="product_public_category_isolation_rule_portal" model="ir.rule">
            <field name="name">Public Category Multi-Company Isolation (Portal Users)</field>
            <field name="model_id" ref="website_sale.model_product_public_category"/>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
